<?xml version="1.0" encoding="utf-8"?>


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_toolbar_back"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/iv_toolbar_options"
                    android:layout_toLeftOf="@+id/iv_toolbar_options"
                    android:layout_toEndOf="@+id/iv_toolbar_back"
                    android:layout_toRightOf="@+id/iv_toolbar_back"
                    android:gravity="center"
                    android:inputType="textCapSentences"
                    android:textColor="@color/white"
                    tools:text="Title" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_toolbar_user"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentEnd="true"
                    android:layout_toStartOf="@id/iv_toolbar_options"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_launcher_foreground" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_toolbar_options"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_launcher_background" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>
