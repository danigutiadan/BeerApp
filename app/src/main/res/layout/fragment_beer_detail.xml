<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="#fbd404"
    tools:context=".features.beer.detail.ui.BeerDetailFragment">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_beer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        tools:text="Estrella galicia" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tagline_beer_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_beer_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Estrella galicia" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_beer_detail"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_tagline_beer_detail"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_beer_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/iv_beer_detail"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_detail_volume"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_beer_detail_description"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_detail_boil_volume"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_beer_detail_volume"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_detail_ingredients"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/ingredients"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/tv_beer_detail_boil_volume"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_detail_malt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_beer_detail_ingredients"
        android:textColor="@color/black"
        android:text="Malt:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_beer_detail_malt"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_beer_detail_malt"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginHorizontal="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_detail_hops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rv_beer_detail_malt"
        android:textColor="@color/black"
        android:text="Hops:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_beer_detail_hops"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_beer_detail_hops"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginHorizontal="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_detail_yeast_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rv_beer_detail_hops"
        android:textColor="@color/black"
        android:text="Yeast:" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_detail_yeast"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/tv_beer_detail_yeast_title"
        android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
